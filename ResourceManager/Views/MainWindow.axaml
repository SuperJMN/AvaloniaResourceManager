<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:Avalonia.Diagnostics.ResourceTools.ViewModels"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Avalonia.Diagnostics.ResourceTools.Views.MainWindow"
        Title="MainWindow" x:DataType="viewModels:MainViewModel"
        x:CompileBindings="True">
	<DockPanel>
		<Button DockPanel.Dock="Top" Command="{Binding Load}">Load resources</Button>
        <ScrollViewer>
			<ItemsControl Items="{Binding Resources}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <DockPanel>
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Text="{Binding Key}" />
                            <Border BorderBrush="Black" BorderThickness="1" Background="{Binding Preview}" />
                        </DockPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
	</DockPanel>
</Window>
